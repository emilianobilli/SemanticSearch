# Configuración de Semantic Search API
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración de Victor Database
SEMANTIC_VICTOR_TABLE_SOCKET=/tmp/victor_default_table.sock
SEMANTIC_VICTOR_INDEX_SOCKET=/tmp/victor_default_index.sock

# Configuración de la API
SEMANTIC_API_HOST=0.0.0.0
SEMANTIC_API_PORT=8000
SEMANTIC_API_RELOAD=true
SEMANTIC_API_LOG_LEVEL=info

# Configuración CORS (separar múltiples orígenes con comas)
SEMANTIC_CORS_ORIGINS=*

# Configuración de búsqueda
SEMANTIC_MAX_SEARCH_RESULTS=50
SEMANTIC_DEFAULT_SEARCH_RESULTS=10
